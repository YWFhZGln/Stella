<?xml version="1.0" encoding="utf-8"?>

<ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="20dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#000000"
                android:layout_marginEnd="25dp"
                android:onClick="FixExamCenter"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pluss"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Fix Exam Center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#000000"
                android:padding="5dp"
                android:onClick="ViewColleges">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/school"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:background="#000000"
                    android:text="View College"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginStart="-2dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#000000"
                android:padding="2dp"
                android:layout_marginRight="25dp"
                android:onClick="ImpersonationCheck">
                <ImageView
                    android:layout_width="143dp"
                    android:layout_height="150dp"
                    android:padding="12dp"
                    android:src="@drawable/fingerprint"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Impersonation "
                    android:textSize="16sp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#000000"
                android:padding="10dp"
                android:onClick="PaymentStatus">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    android:padding="8dp"
                    android:src="@drawable/rupee"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Payment Status"
                    android:paddingLeft="8dp"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:onClick="Attendance">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#000000"
                android:layout_marginRight="25dp"
                android:padding="15dp"
                android:weightSum="1"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/calender1"
                    android:layout_weight="0.45" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="Attendance"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#000000"
                android:padding="2dp"
                android:paddingRight="4dp"
                android:onClick="ViewProfile">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:padding="15dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/profile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:text="View Profile"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>